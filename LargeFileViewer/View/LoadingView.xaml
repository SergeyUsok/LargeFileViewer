        <Image gif:ImageBehavior.RepeatBehavior="Forever" gif:ImageBehavior.AnimatedSource="..\Resources\load.gif" Height="600" Width="600" HorizontalAlignment="Center" Canvas.Left="51" Canvas.Top="10"/>
